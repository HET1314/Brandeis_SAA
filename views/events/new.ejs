<div class="data-form">
  <form action="/events/create" method="POST">
    <h2>Create a new event:</h2>
    <br />
    <label for="inputTitle">Title</label>
    <input
      type="text"
      name="title"
      id="inputTitle"
      placeholder="Title"
      required
    />
    <br />
    <label for="inputDescription">Description</label>
    <input
      type="text"
      name="description"
      id="inputDescription"
      placeholder="Description"
      required
    />
    <br />
    <label for="inputLocation">Location</label>
    <input
      type="text"
      name="location"
      id="inputLocation"
      placeholder="Location"
      required
    />
    <br />
    <label for="inputStartDate">Start Date</label>
    <input
      type="text"
      name="startDate"
      id="inputStartDate"
      placeholder="Start Date"
      required
    />
    <br />
    <label for="inputEndDate">End Date</label>
    <input
      type="text"
      name="endDate"
      id="inputEndDate"
      placeholder="End Date"
      required
    />
    <br />
    <label for="inputIsOnline">Is Online</label>
    <input
      type="text"
      name="isOnline"
      id="inputIsOnline"
      placeholder="Is Online"
    />
    <br />
    <label for="inputRegistrationLink">Registration Link</label>
    <input
      type="text"
      name="registrationLink"
      id="inputRegistrationLink"
      placeholder="Registration Link"
    />
    <br />
    <label for="inputOrganizer">Organizer</label>
    <input
      type="text"
      name="organizer"
      id="inputOrganizer"
      placeholder="Organizer"
      required
    />
    <br />
    <label for="inputAttendees">Attendees</label>
    <input
      type="text"
      name="attendees"
      id="inputAttendees"
      placeholder="Attendees"
    />

    <br />
    <button type="submit">Submit</button>
  </form>
</div>
